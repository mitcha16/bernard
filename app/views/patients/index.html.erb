<% provide(:title, 'Patients') %>
<h1>Patients</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>DOB</th>
      <th>Gender</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
    <%= render partial: 'patient', locals: {patient: patient, name: patient.name} %>
    <% end %>
  </tbody>
</table>
